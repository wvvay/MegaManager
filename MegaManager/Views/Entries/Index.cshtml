@model IEnumerable<Entry>
@{
    ViewData["Title"] = "Entries";
}

<style>
    table {
        border-collapse: collapse;
        width: auto;
        margin: 0 auto;
        display: table;
    }

    th, td {
        padding: 8px;
        text-align: left;
        vertical-align: middle;
    }

    th {
        background-color: #f2f2f2;
    }

    .default-button {
        background: none;
        border: none;
        cursor: pointer;
    }
</style>


<body>
    <h2>Запись</h2>
    <p>
        <a class="btn btn-primary" asp-action="Create">Добавить запись</a>
    </p>
    <div style="text-align: center;">
        <table>
            <thead>
                <tr>
                    <th>URL</th>
                    <th>Login</th>
                    <th>Password</th>
                    <th>Notes</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var entry in Model)
                {
                    <tr>
                        <td id="addressField">
                            <span>@entry.URL</span>
                            <span>@entry.Login</span>
                            <span>@entry.Password</span>
                            <span>@entry.Notes</span>

                            <button class="default-button" onclick="copyText(this, 'address')">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     height="24px"
                                     viewBox="0 0 24 24"
                                     width="24px"
                                     fill="black">
                                    <path d="M0 0h24v24H0V0z" fill="none" />
                                    <path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm-1 4H8c-1.1 0-1.99.9-1.99 2L6 21c0 1.1.89 2 1.99 2H19c1.1 0 2-.9 2-2V11l-6-6zM8 21V7h6v5h5v9H8z" />
                                </svg>
                            </button>
                        </td>

                        <td id="passwordField">
                            <span>@entry.Password</span>

                            <button class="default-button" onclick="copyText(this, 'password')">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     height="24px"
                                     viewBox="0 0 24 24"
                                     width="24px"
                                     fill="black">
                                    <path d="M0 0h24v24H0V0z" fill="none"/>
                                    <path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm-1 4H8c-1.1 0-1.99.9-1.99 2L6 21c0 1.1.89 2 1.99 2H19c1.1 0 2-.9 2-2V11l-6-6zM8 21V7h6v5h5v9H8z"/>
                                </svg>
                            </button>
                        </td>

                        <td>
                            <form asp-action="Delete" asp-route-id="@entry.Id" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

<script>
    function copyText(button, type) {
        var cell = button.parentElement; // Get the parent <td> of the clicked button
        var textElement = cell.querySelector("span"); // Find the <span> within the <td>
        var textToCopy = textElement.innerText.trim(); // Get the text content and trim any whitespace

        // Create a temporary input element
        var tempInput = document.createElement("input");
        tempInput.value = textToCopy;
        document.body.appendChild(tempInput);

        // Select the text in the temporary input element
        tempInput.select();
        tempInput.setSelectionRange(0, 99999); // For mobile devices

        // Copy the text to the clipboard
        document.execCommand("copy");

        // Remove the temporary input element
        document.body.removeChild(tempInput);
    }
</script>